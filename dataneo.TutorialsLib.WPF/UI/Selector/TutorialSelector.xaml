<Window
    x:Class="dataneo.TutorialsLib.WPF.UI.TutorialSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:dataneo.TutorialsLib.WPF.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="tutorialSelectorWindow"
    Title="TutorialSelector"
    Width="800"
    Height="450"
    Background="#1A1A17"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Background="{Binding ElementName=tutorialSelectorWindow, Path=Background}"
            Foreground="AntiqueWhite">
            <MenuItem Header="Tutorial" />
            <MenuItem Header="Sortuj" />
            <MenuItem Header="Ustawienia" />

        </Menu>
    </Grid>
</Window>
