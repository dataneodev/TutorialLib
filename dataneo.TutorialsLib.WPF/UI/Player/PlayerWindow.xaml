<Window
    x:Class="TutorialsLib.PlayerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TutorialsLib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:player="clr-namespace:TutorialsLib.UI"
   
    x:Name="playeWindow"
    Title="{Binding Path=Caption}"
    Width="800"
    Height="450"
    Background="Black"
    Closing="playeWindow_Closing"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" MinWidth="220" />
        </Grid.ColumnDefinitions>
        <player:VideoPlayer
            x:Name="videoView"
            Grid.Column="0"
            Visibility="Visible" />
        <player:VideoList Grid.Column="1" ItemSource="{Binding Path=VideoItems}" />
    </Grid>
</Window>
