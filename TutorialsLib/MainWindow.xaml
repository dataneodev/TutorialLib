<Window
    x:Class="TutorialsLib.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TutorialsLib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:player="clr-namespace:TutorialsLib.UI"
    xmlns:uc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="Black"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <uc:VideoView
            x:Name="VideoView"
            Grid.Column="0"
            Visibility="Collapsed" />
        <player:VideoList Grid.Column="1" ItemSource="{Binding Path=VideoItems}" />
    </Grid>
</Window>
